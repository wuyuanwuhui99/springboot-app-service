        <java.version>1.8</java.version>
        <spring-boot.version>2.0.1.RELEASE</spring-boot.version>
        <mysql-connector-java.version>8.0.24</mysql-connector-java.version>
        <druid-spring-boot-starter.version>1.1.13</druid-spring-boot-starter.version>
        <lombok.version>1.16.16</lombok.version>
        <log4j.version>1.2.17</log4j.version>
        <springfox-swagger2.version>2.9.2</springfox-swagger2.version>
        <springfox-swagger-ui.version>2.9.2</springfox-swagger-ui.version>
        <spring-cloud-dependencies.version>Finchley.SR1</spring-cloud-dependencies.version>
        <commons-io.version>2.6</commons-io.version>
        <org.apache.httpcomponents.version>4.5.2</org.apache.httpcomponents.version>
        <redis.clients.version>2.9.0</redis.clients.version>
