        <org.slf4j.version>1.7.25</org.slf4j.version>
        <org.apache.tomcat.embed.version>8.5.29</org.apache.tomcat.embed.version>
        <commons-lang>2.6</commons-lang>
        <com.alibaba>1.2.53</com.alibaba>
        <springboot.mail>2.0.1.RELEASE</springboot.mail>
        <javax.mail>1.6.2</javax.mail>
    </properties>

    <modules>
        <module>../player-music</module>
        <module>../player-movie</module>
        <module>../player-common</module>
        <module>../player-learn</module>
        <module>../player-ebook</module>
        <module>../player-toutiao</module>
        <module>../player-video</module>
        <module>../player-social</module>
        <module>../player-circle</module>
        <module>../player-user</module>
    </modules>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-starter-data-redis</artifactId>
                <version>${spring-boot-starter-data-redis.version}</version>
            </dependency>
            <dependency>
                <groupId>redis.clients</groupId>
                <artifactId>jedis</artifactId>
                <version>${redis.clients.version}</version>
            </dependency>
            <dependency>
